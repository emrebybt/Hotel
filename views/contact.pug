extends layout 
block content


    .container-xxl.py-5
        .container
            .text-center.wow.fadeInUp(data-wow-delay='0.1s')
                h6.section-title.text-center.text-primary.text-uppercase Contact Us
                h1.mb-5
                    span.text-primary.text-uppercase Contact
                    |  For Any Query
            .row.g-4
                .col-12
                    .row.gy-4
                        .col-md-4
                            h6.section-title.text-start.text-primary.text-uppercase Booking
                            p
                                i.fa.fa-envelope-open.text-primary.me-2
                                | book@example.com
                        .col-md-4
                            h6.section-title.text-start.text-primary.text-uppercase General
                            p
                                i.fa.fa-envelope-open.text-primary.me-2
                                | info@example.com
                        .col-md-4
                            h6.section-title.text-start.text-primary.text-uppercase Technical
                            p
                                i.fa.fa-envelope-open.text-primary.me-2
                                | tech@example.com
                .col-md-6.wow.fadeIn(data-wow-delay='0.1s')
                    iframe.position-relative.rounded.w-100.h-100(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d192697.88850542821!2d28.84737288216712!3d41.00546324296546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1698516908398!5m2!1str!2str' frameborder='0' style='min-height: 350px; border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')
                .col-md-6
                    .wow.fadeInUp(data-wow-delay='0.2s')
                        form
                            .row.g-3
                                .col-md-6
                                    .form-floating
                                        input#name.form-control(type='text' placeholder='Your Name')
                                        label(for='name') Your Name
                                .col-md-6
                                    .form-floating
                                        input#email.form-control(type='email' placeholder='Your Email')
                                        label(for='email') Your Email
                                .col-12
                                    .form-floating
                                        input#subject.form-control(type='text' placeholder='Subject')
                                        label(for='subject') Subject
                                .col-12
                                    .form-floating
                                        textarea#message.form-control(placeholder='Leave a message here' style='height: 150px')
                                        label(for='message') Message
                                .col-12
                                    button.btn.btn-primary.w-100.py-3(type='submit') Send Message
